<div class="container">
  <div class="list-group">
    {{#each @model as |task|}}
      <div class="row">
        <div class="list-group-item col-md-8">
          {{task.id}}:
          {{task.description}}
          <span class="deadline pull-right"><strong>Due:</strong> {{task.deadline}}</span>
        </div>
        <div class="col-md-4">
          <LinkTo class="btn btn-default edit" @route="tasks.edit" @model={{task.id}}>
            Edit
          </LinkTo>
          <button type="button" class="btn btn-danger remove" {{on "click" (action this.delete task)}}>
            Remove
          </button>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<br>
<div class="container">
  <div class="row">
      {{outlet}}
  </div>
</div>